{
  "name": "taskdefender-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for TaskDefender",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "typescript": "^4.9.0"
  },
  "private": true
}