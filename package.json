{
  "name": "taskdefender",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A comprehensive productivity application with AI-powered motivation and privacy-first design",
  "keywords": ["productivity", "task-management", "ai", "privacy", "react", "typescript"],
  "author": "TaskDefender Team",
  "license": "MIT",
  "scripts": {
    "dev": "parcel src/index.html --host 0.0.0.0 --port 5173",
    "build": "parcel build src/index.html --dist-dir dist --public-url ./",
    "build:fast": "parcel build src/index.html --dist-dir dist --public-url ./ --no-optimize",
    "preview": "parcel serve dist --host 0.0.0.0 --port 4173",
    "clean": "rm -rf dist .parcel-cache"
  },
  "dependencies": {
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@parcel/transformer-typescript-tsc": "^2.12.0",
    "autoprefixer": "^10.4.18",
    "parcel": "^2.12.0",
    "postcss": "^8.4.35",
    "process": "^0.11.10",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "targets": {
    "default": {
      "distDir": "dist",
      "publicUrl": "./"
    }
  }
}