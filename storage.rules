rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // TaskDefender user profile pictures
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if true; // Profile pictures can be publicly readable
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // TaskDefender user attachments
    match /users/{userId}/attachments/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // TaskDefender team assets
    match /teams/{teamId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Team members can upload
      allow delete: if request.auth != null; // Team admins should handle this in app logic
    }

    // Default deny rule
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}